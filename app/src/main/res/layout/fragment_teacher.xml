<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:padding="17dp"
    android:layout_height="match_parent"
    tools:context=".view.fragment.TeacherFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:layout_width="228dp"
            android:layout_height="match_parent"
            android:src="@drawable/teacher"></ImageView>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:backgroundTint="#EEF0FA"
        android:layout_width="match_parent"
        app:strokeWidth="1dp"
        app:strokeColor="#444343"
        android:layout_height="200dp">
        <LinearLayout

            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:id="@+id/teacherInfoName1"
                    android:fontFamily="@font/anonymous_pro"
                    android:textSize="19sp"
                    android:text="Name:-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/anonymous_pro"
                    android:id="@+id/teacherInfoName"
                    android:layout_marginLeft="10dp"
                    android:textSize="19sp"
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/teacherInfoId1"
                    android:textAlignment="center"
                    android:fontFamily="@font/anonymous_pro"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:text="Teacher ID:-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/teacherInfoId"
                    android:textAlignment="center"
                    android:fontFamily="@font/anonymous_pro"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:text="ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/teacherInfoDesig1"
                    android:textAlignment="center"
                    android:fontFamily="@font/anonymous_pro"
                    android:textSize="15sp"
                    android:text="Designation:-"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/teacherInfoDesig"
                    android:textAlignment="center"
                    android:fontFamily="@font/anonymous_pro"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/teacherInfoDept1"
                    android:fontFamily="@font/anonymous_pro"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:text="Department:-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/teacherInfoDept"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:fontFamily="@font/anonymous_pro"
                    android:layout_marginLeft="10dp"
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/teacherShiftDept1"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:text="Shift:-"
                    android:fontFamily="@font/anonymous_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/teacherShiftDept"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:text="Name"
                    android:fontFamily="@font/anonymous_pro"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>





        </LinearLayout>







    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ViewAttendanceCV"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            app:strokeColor="#444343"
            app:strokeWidth="1dp"
            >
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/viewattendance"
                 />

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:text="View Attendance"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/teacherAttendanceCV"

              android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#444343"
            android:layout_height="150dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mark_attendance" />

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:text=" Take Attendance"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>




        </com.google.android.material.card.MaterialCardView>





    </LinearLayout>




</LinearLayout>